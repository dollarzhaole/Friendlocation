<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/info_bubble"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/map_bubble_name"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="28dp"
        android:ellipsize="marquee"
        android:gravity="center_horizontal"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/map_bubble_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/map_bubble_name"
        android:background="@drawable/phone"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/map_bubble_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/map_bubble_phone"
        android:background="@drawable/message48"
        android:contentDescription="@string/app_name" />

</RelativeLayout>